# ============================================================
# Root env (used by docker-compose)
# Copy this file to .env and fill real values locally.
# DO NOT commit .env
# ============================================================

# -------------------------
# Backend (FastAPI)
# -------------------------
APP_DATA_DIR=/app/data
API_KEYS_JSON={"dev-key":"demo"}

QDRANT_URL=http://qdrant:6333
MLFLOW_TRACKING_URI=http://mlflow:5000
COLLECTION_NAME=pdf_chunks

RAG_MAX_DISTANCE=0.35
CHUNK_SIZE=900
CHUNK_OVERLAP=150

# Choose: ollama | gemini
LLM_PROVIDER=gemini

# Gemini: must start with "models/"
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=models/gemini-flash-latest

# Ollama (optional fallback)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2:0.5b


# -------------------------
# Frontend (Streamlit)
# (When running in docker, it should call backend by service name)
# -------------------------
BACKEND_URL=http://backend:8000
DEFAULT_API_KEY=dev-key
